<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>

<script>
    const townModal = {
        selectedEditionId: null,
        selectedCharacterList: [],
        playedCharacterList: [],
        playerList: [],
        playStatus: {},
        open: async playId => {
            townModal.selectedEditionId = null;
            townModal.selectedCharacterList = [];
            townModal.playedCharacterList = [];
            townModal.playerList = [];
            townModal.playStatus = {};

            await townModal.loadGameStatus(playId);

            console.log('playStatus', townModal.playStatus);
            if (Object.keys(townModal.playStatus).length === 0) {
                alert("ê²Œì„ì´ ì‹œì‘ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.");
                return;
            }

            const $townModal = $("#townModal");
            const $settingDiv = $townModal.find("div[name='settingDiv']");
            const playerSetting = initializationSetting.player
                .find(player => townModal.playerList.length === player.townsFolk + player.outsider + player.minion + player.demon);
            const roleInitializationHtml = `
                <span class="text-primary">ë§ˆì„ì£¼ë¯¼ \${playerSetting.townsFolk}ëª…</span>,
                <span class="text-info">ì´ë°©ì¸ \${playerSetting.outsider}ëª…</span>,
                <span class="text-warning">í•˜ìˆ˜ì¸ \${playerSetting.minion}ëª…</span>,
                <span class="text-danger">ì•…ë§ˆ \${playerSetting.demon}ëª…</span>`;
            $settingDiv.find("span[name='roleInitialization']").html(roleInitializationHtml);

            const $townDiv = $townModal.find("div[name='townDiv']");
            $townDiv.empty();

            if (Object.keys(townModal.playStatus).length === 0) {
                const htmlString = `ê²Œì„ì´ ì‹œì‘ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.`;
                $townDiv.append(htmlString);
                return;
            }

            townModal.playerList.sort((prev, next) => prev.seatNumber - next.seatNumber);

            const htmlString = townModal.playerList.reduce((prev, next) => {
                const playerNameHtml = next.died
                    ? `\${next.nickname} <i class="ni ni-tie-bow"></i>`
                    : `<strong>\${next.nickname}</strong>`;
                const votableHtml = next.votable ? `<strong>íˆ¬í‘œê¶Œ â—‹</strong>` : `íˆ¬í‘œê¶Œ Ã—`;

                return prev +
                    `<div class="row">
                            <div class="col-2">
                                \${next.seatNumber}
                            </div>
                            <div class="col-6">
                                \${playerNameHtml}
                            </div>
                            <div class="col-4">
                                \${votableHtml}
                            </div>
                        </div>
                        <hr class="mt-2 mb-2">`;
            }, "");

            $townDiv.append(htmlString);

            window.addEventListener("resize", townModal.renderTown);

            $townModal.modal("show");

            $townModal.one("shown.bs.modal", () => {
                townModal.renderTown();
            });
        },
        loadGameStatus: async playId => {
            const lastPlayLog = await townModal.readLastPlayLog(playId);
            if (!lastPlayLog) {
                return;
            }

            const lastPlayLogJson = JSON.parse(lastPlayLog);

            townModal.selectedEditionId = lastPlayLogJson.selectedEditionId;
            townModal.selectedCharacterList = JSON.parse(lastPlayLogJson.selectedCharacterList);
            townModal.playedCharacterList = JSON.parse(lastPlayLogJson.playedCharacterList);
            townModal.playerList = JSON.parse(lastPlayLogJson.playerList);
            townModal.playStatus = JSON.parse(lastPlayLogJson.playStatus);

            console.log('game status loaded !!');
        },
        readLastPlayLog: playId => {
            return gfn_callGetApi("/api/play/log/last", {playId})
                .then(data => {
                    // console.log('data', data);
                    return data?.log;
                })
                .catch(response => console.error('error', response));
        },
        renderTown: () => {
            const canvas = document.getElementById("townCanvas");
            const ctx = canvas.getContext("2d");

            const rect = canvas.getBoundingClientRect();
            canvas.width = rect.width * window.devicePixelRatio;
            canvas.height = rect.height * window.devicePixelRatio;
            ctx.scale(window.devicePixelRatio, window.devicePixelRatio);

            const width = canvas.clientWidth;
            const height = canvas.clientHeight;
            const centerX = width / 2;
            const centerY = height / 2;
            const radius = width * 0.35;
            const seatRadius = width * 0.06;

            // ë°°ê²½ ê·¸ë¼ë°ì´ì…˜
            const gradient = ctx.createLinearGradient(0, 0, width, height);
            gradient.addColorStop(0, "#4a2d55");
            gradient.addColorStop(1, "#270432");
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, width, height);

            // í•˜ë‹¨ ê³µë°± ê°ë„ ê³„ì‚°
            const totalSeats = townModal.playerList.length;
            const gapAngle = Math.PI / 6; // 30ë„ ê³µë°±
            const anglePerSeat = (2 * Math.PI - gapAngle) / totalSeats;
            const startAngle = Math.PI / 2 + gapAngle; // 6ì‹œ ë°©í–¥ ê³µë°± ì‹œì‘

            for (let i = 0; i < totalSeats; i++) {
                const player = townModal.playerList[i];
                const angle = startAngle + i * anglePerSeat;

                const x = centerX + radius * Math.cos(angle);
                const y = centerY + radius * Math.sin(angle);

                // ì›ì˜ ì…ì²´ê°
                const gradient = ctx.createRadialGradient(x - 10, y - 10, 5, x, y, seatRadius);
                if (player.died) {
                    gradient.addColorStop(0, "#aaa");
                    gradient.addColorStop(1, "#666");
                } else {
                    gradient.addColorStop(0, "#fff");
                    gradient.addColorStop(1, "#ccc");
                }

                // ì› (ì¢Œì„)
                ctx.beginPath();
                ctx.arc(x, y, seatRadius, 0, 2 * Math.PI);
                ctx.fillStyle = gradient;
                ctx.fill();
                ctx.lineWidth = player.votable ? 5 : 1;
                ctx.strokeStyle = player.votable ? "#fff" : "#888";
                ctx.stroke();
                ctx.closePath();

                // nickname
                ctx.font = (seatRadius * 0.45) + "px bold sans-serif";
                ctx.fillStyle = "#000";
                ctx.textAlign = "center";
                ctx.textBaseline = "middle";
                ctx.fillText(player.nickname, x, y - seatRadius * 0.2);

                // ì•„ì´ì½˜ (ì› ì•ˆ í•˜ë‹¨)
                let icons = "";
                if (player.nominating) icons += "ğŸ«µ";
                if (player.nominated) icons += "ğŸ™…";

                ctx.font = (seatRadius * 0.4) + "px sans-serif";
                ctx.fillText(icons, x, y + seatRadius * 0.35);
            }
        },
        close: () => {
        },
    }
</script>

<div class="modal fade" id="townModal" role="dialog"
     aria-labelledby="townModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="">ë§ˆì„ ê´‘ì¥</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div name="settingDiv">
                    <h4><span name="roleInitialization"></span></h4>
                </div>
                <br>
                <div style="width: 100%; max-width: 700px; aspect-ratio: 1 / 1; position: relative;">
                    <canvas id="townCanvas" style="width: 100%; height: 100%; display: block;"></canvas>
                </div>
                <br>
                <div name="townDiv"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-block" data-dismiss="modal">ë‹«ê¸°</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
